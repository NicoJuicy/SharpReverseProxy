<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Powerful Reverse Proxy written as OWIN Middleware. Perfect for asp.net, web.api, microservices, etc.</Description>
    <Version>2.0.0-alpha</Version>
    <Authors>Andre Carlucci</Authors>
    <TargetFramework>netstandard1.6</TargetFramework>
    <AssemblyName>SharpReverseProxy</AssemblyName>
    <PackageId>SharpReverseProxy</PackageId>
    <PackageTags>aspnetcore;microservices;proxy;apigateway</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/SharpTools/SharpReverseProxy</RepositoryUrl>
    <PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseUrl>https://github.com/SharpTools/SharpReverseProxy/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/SharpTools/SharpReverseProxy</PackageProjectUrl>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="1.1.2" />
  </ItemGroup>

</Project>
